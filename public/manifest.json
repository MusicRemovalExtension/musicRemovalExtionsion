{
  "manifest_version": 3,
  "name": "Speech-Only Audio",
  "version": "0.1.0",
  "description": "Removes music from browser audio, keeping speech clear.",
  "permissions": ["tabCapture", "storage", "offscreen", "activeTab", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options": {
    "page": "options.html",
    "open_in_tab": true
  },
  "offscreen": {
    "url": "offscreen.html",
    "reasons": ["AUDIO_PLAYBACK"],
    "justification": "Audio processing for music cancellation"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png"
    }
  },
  "icons": {
    "48": "icons/icon48.png"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": ["worklets/capture-processor.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
