{
    "manifest_version": 3,
    "name": "Speech-Only Audio",
    "version": "0.1.0",
    "description": "Removes music from browser audio, keeping speech clear.",
    "permissions": ["tabCapture", "storage", "offscreen"],
    "background": {
      "service_worker": "background/index.ts",
      "type": "module"
    },
    "action": {
      "default_popup": "popup/index.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  